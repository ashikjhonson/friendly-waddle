<!--Give answers to question page-->

<%- include('navbar'); -%>
<script>
  setTimeout(function() {
    var flashMessage = document.getElementById('flash-message');
    if (flashMessage) {
      flashMessage.style.display = 'none';
    }
  }, 5000);
</script>
<div class="bg-light pt-4">
  <div class="container vh-100">
    <% if (flashMessage && flashMessage.length > 0) { %>
      <div class="col-6 mx-auto" id="flash-message">
        <div class="alert alert-primary alert-dismissible fade show row p-2" role="alert">        
            <div class="container text-center">
              <strong> <%= flashMessage %> </strong>            
            </div>
        </div>      
      </div>
    <% } %>
    <div class="col-8 mx-auto" >
        <div class="card card-body bg-light border-0">   
          <h4 class="ms-1 mb-4">Questions for you</h4>         
            <% questions.forEach(question=>{ %>
            <div class="card container shadow pb-1" style="margin-bottom: 3%; ">
                <div class="card-body p-0 pb-1">                    
                    <a href="/questions-view-question-<%= question.q_id %>" class="fw-medium text-black"><h5 class="card-title text-truncate mw-75 mt-2"><%=question.question%></h5></a>
                    <a href="/new-post?q_id=<%= question.q_id %>" class="fw-medium">Give Answer</a>
                    <span class="fw-lighter px-5">Asked by: <a href="/users/<%=question.name%>/<%=question.u_id%>"><%=question.name%></a></span>
                    <span class="fw-lighter ps-3">Date: <%=question.date%></span>
                </div>
            </div>            
            <% }) %>            
        </div>
      </div>
    </div>

</div>