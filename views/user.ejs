<%- include('navbar'); -%>
<div class="pt-4">
    <div class="container">  
        <h3 class="text-center mb-3">Profile</h3>
        <div class="card bg-light w-50 mb-5 border border-dark p-2 text-start custom-card mx-auto">
            <div class="row">
              <div class="col-md-4">
                <img src="/assets/male.svg" class="mt-5 ms-4 h-50 h-lg-75">
              </div>
              <div class="col-md-8">
                <div class="card-body ">
                  <p class="fw-bold card-text"><span class="fw-medium">Name: </span><%= user.Name%></p>
                  <p class="card-text">Email: <span class="fw-medium"><%= user.Email%></span></p>                  
                  <p class="card-text">About: <span class="fw-medium"><%= user.About%></span></p>                  
                  <p class="card-text"><small class="text-body-secondary">Joined <%=user.Date%></small></p>                  
                </div>
              </div>
            </div>
        </div>
        
        <div class="row w-75 mx-auto">                        
              <div class="container vh-100">
                <div class="row mb-5 mt-5">
                    <div class="card card-body bg-light">
                        <h4 class="text-center">Questions</h4>
                        <% if(!questions[0]) {%>                            
                            <h6 class="text-center">You haven't asked anything <a href="/ask">Ask here</a></h6>
                        <%}%>
                        <% questions.forEach(question=>{ %>
                        <div class="card container shadow" style="margin-bottom: 3%; ">
                            <div class="card-body">
                                <a class="text-decoration-none pb-3 text-secondary"><%=question.Date%></a>      
                                <h5 class="card-title text-truncate mw-75 mb-3 pt-2"><%=question.question%></h5>                                                                                            
                            </div>
                        </div>
                        <% }) %>
                    </div>
                  </div>
                  <div class="row mb-5">
                    <div class="card card-body bg-light mb-3">
                        <h4 class="text-center">Answers</h4>
                        <% if(!posts[0]) {%>                            
                            <h6 class="text-center">You haven't given reply to any question yet <a href="/answer">See questions</a></h6>
                        <%}%>
                        <% posts.forEach(post=>{ %>
                        <div class="card container shadow" style="margin-bottom: 3%; ">
                            <div class="card-body">
                                <a class="text-decoration-none pb-3 text-secondary"><%=post.Date%></a>      
                                <h5 class="card-title text-truncate mw-75 pt-2"><%=post.question%></h5>
                                <p class="text-truncate mw-75"><%=post.answer%></p>
                                <a href="/posts-view-post-<%= post.p_id %>" class="btn btn-primary">View post</a>                              
                            </div>
                        </div>
                        <% }) %>
                    </div>
                  </div>
              </div>                    
        </div>
    </div>
</div>